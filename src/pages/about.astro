---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, AUTHOR_NAME } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={`About | ${SITE_TITLE}`}
      description={`About ${AUTHOR_NAME}`}
    />
  </head>
  <body>
    <Header />
    <main>
      <h1>About</h1>

      <div class="about-content">
        <p>
          Hi, I'm {AUTHOR_NAME}. I'm a software developer who enjoys building
          things for the web.
        </p>

        <p>
          I write about programming, web development, and the tools I use. This
          blog is where I share tutorials, project write-ups, and things I've
          learned along the way.
        </p>

        <h2>Get in touch</h2>
        <p>You can find me on:</p>
        <ul class="social-list">
          <li>
            <a
              href="https://github.com/davidyusaku-13"
              target="_blank"
              rel="noopener noreferrer">GitHub</a
            >
          </li>
          <li>
            <a
              href="https://www.linkedin.com/in/david-yusaku-setiyono/"
              target="_blank"
              rel="noopener noreferrer">LinkedIn</a
            >
          </li>
        </ul>

        <p>
          Or reach out via email at <a href="mailto:davidyusaku@proton.me"
            >davidyusaku@proton.me</a
          >.
        </p>
      </div>
    </main>
    <Footer />
  </body>
</html>

<style>
  h1 {
    margin-bottom: var(--spacing-lg);
  }

  .about-content {
    max-width: var(--content-width);
  }

  .about-content h2 {
    margin-top: var(--spacing-xl);
    margin-bottom: var(--spacing-sm);
  }

  .social-list {
    list-style: none;
    padding: 0;
    margin: 0 0 var(--spacing-md) 0;
  }

  .social-list li {
    margin-bottom: var(--spacing-xs);
  }
</style>
